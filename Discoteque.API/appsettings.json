{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/loggings.txt"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "UserId": "system",
  "KafkaConfiguration": {
    "Publisher": {
      "BootstrapServers": "localhost:9094",
      "AllowAutoCreateTopics": true,
      "SecurityProtocol": "plaintext",
      "Topics": {
        "AlbumsTopic": "Discoteque.Albums"
      }
    }
  }
}
